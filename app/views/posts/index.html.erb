<div class="row">
  <div class="col-12">
    <h1>Posts</h1>
    <% @posts.each do |post| %>
      <h2><%= post.title %></h2>
      <div><%= post.content %></div>
    <% end %>
    <h1>Drafts</h1>
    <% @drafts.each do |post| %>
      <h2><%= post.title %></h2>
      <div><%= post.content %></div>
    <% end %>
  </div>
</div>
